<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1">
        <SeekBar android:id="@+id/seekBar1"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dip"
        	android:layout_marginBottom="10dip" android:paddingTop="10dip" android:paddingBottom="10dip"></SeekBar>
        <TextView android:text="TextView" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center|center_vertical|center_horizontal|fill" android:layout_gravity="center|center_horizontal|right"></TextView>
    <TableRow android:id="@+id/tableRow2" 
    	android:layout_width="match_parent"
    	android:layout_weight="1"
    	android:layout_gravity="center" android:baselineAligned="false">
        <Button android:text="-"
        	android:id="@+id/buttonBREAK"
        	android:layout_width="50dip"
        	android:layout_height="wrap_content"
        	android:onClick="onClickButton" />
		<Button android:text="stop"
			android:id="@+id/buttonSTOP"
        	android:layout_width="50dip"
			android:layout_height="wrap_content"
        	android:onClick="onClickButton"
			android:layout_gravity="center_horizontal" />
        <Button android:text="+"
        	android:id="@+id/buttonACC"
        	android:layout_width="50dip"
        	android:layout_height="wrap_content"
        	android:onClick="onClickButton" />
    </TableRow>
    <SeekBar android:layout_height="wrap_content"
    	android:id="@+id/seekBarDirection"
    	android:layout_width="match_parent"
    	android:layout_marginTop="10dip"
       	android:layout_marginBottom="10dip" android:max="2"
       	android:onClick="onClickButton" android:progress="2"/>
	<View
        android:layout_height="2dip"
        android:background="#FF909090" />
	<ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/imageView1"></ImageView>
</TableLayout>
