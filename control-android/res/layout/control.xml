                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="10dip"
                    android:max="255"
